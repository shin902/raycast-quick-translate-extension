{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "quick-translate",
  "title": "Quick Translate",
  "description": "Translate selected text to Japanese using Google Gemini API",
  "icon": "icon.png",
  "author": "shin902",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0",
    "npm": ">=7.0.0"
  },
  "commands": [
    {
      "name": "translate-text",
      "title": "Translate to Japanese",
      "description": "Translate selected text to Japanese using Gemini API",
      "mode": "view",
      "preferences": [
        {
          "name": "provider",
          "type": "dropdown",
          "required": false,
          "title": "Translation Provider",
          "description": "Select the AI provider to use for translation",
          "default": "gemini",
          "data": [
            {
              "title": "Google Gemini",
              "value": "gemini"
            },
            {
              "title": "Groq",
              "value": "groq"
            }
          ]
        },
        {
          "name": "geminiApiKey",
          "type": "password",
          "required": false,
          "title": "Gemini API Key",
          "description": "Your Google Gemini API key from https://makersuite.google.com/app/apikey"
        },
        {
          "name": "geminiModel",
          "type": "dropdown",
          "required": false,
          "title": "Gemini Model",
          "description": "Select the Gemini model to use for translation",
          "default": "gemini-2.5-flash-lite",
          "data": [
            {
              "title": "Gemini 2.5 Pro",
              "value": "gemini-2.5-pro"
            },
            {
              "title": "Gemini 2.5 Flash",
              "value": "gemini-2.5-flash"
            },
            {
              "title": "Gemini 2.5 Flash Lite",
              "value": "gemini-2.5-flash-lite"
            }
          ]
        },
        {
          "name": "groqApiKey",
          "type": "password",
          "required": false,
          "title": "Groq API Key",
          "description": "Your Groq API key from https://console.groq.com/keys"
        },
        {
          "name": "groqModel",
          "type": "dropdown",
          "required": false,
          "title": "Groq Model",
          "description": "Select the Groq model to use for translation",
          "default": "openai/gpt-oss-120b",
          "data": [
            {
              "title": "Llama 3.3 70B Versatile",
              "value": "llama-3.3-70b-versatile"
            },
            {
              "title": "Llama 3.1 70B Versatile",
              "value": "llama-3.1-70b-versatile"
            },
            {
              "title": "Mixtral 8x7B",
              "value": "mixtral-8x7b-32768"
            },
            {
              "title": "gpt-oss-120b",
              "value": "openai/gpt-oss-120b"
            },
            {
              "title": "gpt-oss-20b",
              "value": "openai/gpt-oss-20b"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@raycast/api": "^1.83.2",
    "groq-sdk": "^0.37.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/jest": "^29.5.12",
    "@types/node": "20.8.10",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  }
}
